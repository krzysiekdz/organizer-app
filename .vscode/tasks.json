{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Flutter Build Runner",
        "type": "shell",
        "command": "dart run build_runner build --delete-conflicting-outputs",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$dart-build_runner"],
        "presentation": {
          "reveal": "always",
          "panel": "dedicated"
        }
      },
      {
        "label": "Flutter Watch Runner",
        "type": "shell",
        "command": "dart run build_runner watch --delete-conflicting-outputs",
        "group": "none",
        "problemMatcher": ["$dart-build_runner"],
        "presentation": {
          "reveal": "always",
          "panel": "dedicated"
        }
      }
    ]
  }